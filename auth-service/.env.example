# Database Configuration
DB_HOST=mhylle-postgres
DB_PORT=5432
DB_NAME=auth_db
DB_USER=auth_user
DB_PASSWORD=your_secure_password_here

# JWT Configuration
JWT_SECRET=your_64_character_jwt_secret_key_here_replace_with_random_string
JWT_EXPIRES_IN=24h

# Security Configuration
BCRYPT_ROUNDS=12
RATE_LIMIT_TTL=60000
RATE_LIMIT_LIMIT=5

# CORS and Cookie Configuration
CORS_ORIGIN=https://mhylle.com,https://*.mhylle.com
COOKIE_DOMAIN=.mhylle.com
COOKIE_SECURE=true
COOKIE_SAME_SITE=strict

# Application Configuration
NODE_ENV=production
PORT=3000