# mhylle.com Infrastructure Environment Configuration
# Copy this file to .env and update the values for your environment

# PostgreSQL Configuration
POSTGRES_DB=mhylle_main
POSTGRES_USER=mhylle_admin
POSTGRES_PASSWORD=your_super_secure_postgres_password_here

# Server Configuration
DOMAIN=mhylle.com
SERVER_IP=51.159.168.239

# GitHub Configuration
GITHUB_USERNAME=your_github_username
GITHUB_TOKEN=your_github_personal_access_token

# SSL Configuration
SSL_EMAIL=your_email@example.com

# Application Configuration
NODE_ENV=production

# Monitoring Configuration
ENABLE_MONITORING=true
LOG_LEVEL=info

# Security Configuration
RATE_LIMIT_API=10
RATE_LIMIT_WEB=50

# Backup Configuration
BACKUP_RETENTION_DAYS=30
BACKUP_SCHEDULE="0 2 * * *"  # Daily at 2 AM

# Resource Limits
MAX_CONTAINER_MEMORY=512m
MAX_CONTAINER_CPU=0.5

# Network Configuration
DOCKER_NETWORK_SUBNET=172.20.0.0/16

# Application-specific database passwords (auto-generated by deploy script)
# DB_PASSWORD_APP1=auto_generated_password
# DB_PASSWORD_APP2=auto_generated_password
